{
  "permissions": {
    "allow": [
      "Bash(go build:*)",
      "Bash(go test:*)",
      "Bash(golangci-lint:*)",
      "Bash(jig plan save:*)",
      "Bash(jig hook mark-skip-save:*)",
      "Bash(jig hook mark-plan-saved:*)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "ExitPlanMode",
        "hooks": [
          {
            "type": "command",
            "command": "jig hook exit-plan-mode"
          }
        ]
      }
    ]
  }
}
